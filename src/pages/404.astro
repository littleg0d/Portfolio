---
import Layout from '@/layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { Home } from 'lucide-react';
import ConstellationEffect from '@/components/ui/ConstellationEffect';
import penguinImg from '@/assets/404-penguin.png';
---

<Layout title="404 - Lost in Space">
  <main
    class="relative flex min-h-screen items-center justify-center overflow-hidden bg-black p-6 text-white"
  >
    <!-- Constellation Background -->
    <ConstellationEffect client:load />

    <div class="relative z-10 flex w-full max-w-5xl flex-col items-center justify-between gap-12 md:flex-row md:gap-24">
      
      <!-- Text Content (Left) -->
      <div class="flex flex-1 flex-col items-center text-center md:items-start md:text-left space-y-8">
        <!-- 404 Glitch Text -->
        <div class="relative">
          <h1
            class="font-display animate-pulse bg-gradient-to-br from-white to-neutral-600 bg-clip-text text-[8rem] font-bold leading-none text-transparent blur-sm select-none md:text-[10rem] lg:text-[12rem]"
          >
            404
          </h1>
          <div class="absolute inset-0 flex items-center justify-center md:justify-start">
            <h1
              class="font-display text-[8rem] font-bold leading-none text-white/10 blur-xl select-none md:text-[10rem] lg:text-[12rem]"
            >
              404
            </h1>
          </div>
          <div class="absolute inset-0 flex items-center justify-center md:justify-start">
             <h1 class="font-display glitch-text text-[8rem] font-bold leading-none text-white md:text-[10rem] lg:text-[12rem]" data-text="404">
              404
             </h1>
          </div>
        </div>

        <div class="space-y-4">
          <h2 class="text-3xl font-bold text-white md:text-4xl">
            Houston, we have a problem.
          </h2>
          <p class="text-lg text-neutral-400 max-w-md">
            The page you are looking for has drifted into a black hole or never existed.
          </p>
        </div>

        <Button
          asChild
          size="lg"
          className="group relative overflow-hidden rounded-full bg-white px-8 py-6 text-black transition-all hover:scale-105 hover:shadow-[0_0_40px_rgba(255,255,255,0.3)] w-fit"
        >
          <a href="/" class="flex items-center gap-2 font-bold">
            <Home className="h-5 w-5 transition-transform group-hover:-translate-y-1 group-hover:translate-x-1" />
            Return to Base
          </a>
        </Button>
      </div>

      <!-- Cute Penguin Image (Right) -->
      <div class="relative w-64 h-64 md:w-96 md:h-96 animate-float flex-1 flex justify-center">
        <img 
          src={penguinImg.src} 
          alt="Lost Space Penguin" 
          class="w-full h-full object-contain drop-shadow-[0_0_25px_rgba(255,255,255,0.2)]"
        />
      </div>

    </div>

    {/* Decoration: Glowing Planet/Orb */}
    <div
      class="pointer-events-none absolute -bottom-40 -right-20 h-[500px] w-[500px] rounded-full bg-blue-500/10 blur-[100px] md:-bottom-80 md:-right-40"
    >
    </div>
    <div
      class="pointer-events-none absolute -top-40 -left-20 h-[300px] w-[300px] rounded-full bg-purple-500/10 blur-[80px]"
    >
    </div>
  </main>
</Layout>

<style>
  /* Glitch Effect */
  .glitch-text {
    position: relative;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -1px 0 #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -1px 0 #00fff9;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 5s infinite linear alternate-reverse;
  }

  @keyframes glitch-anim {
    0% {
      clip: rect(31px, 9999px, 94px, 0);
