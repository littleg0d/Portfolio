      transform: skew(0.1deg);
    }
    100% {
      clip: rect(63px, 9999px, 7px, 0);
      transform: skew(0.82deg);
    }
  }

  @keyframes glitch-anim2 {
    0% {
      clip: rect(69px, 9999px, 31px, 0);
      transform: skew(0.34deg);
    }
    5% {
      clip: rect(84px, 9999px, 65px, 0);
      transform: skew(0.33deg);
    }
